type User {
    id: ID!
    username: String!
    email: String
}

type AuthPayload {
    token: String!
    user: User!
}

type Query {
    me: User
    users: [User!]!
}

type Mutation {
    login(username: String!, password: String!): AuthPayload!
    register(username: String!, password: String!, email: String): AuthPayload!
    logout: Boolean!
}